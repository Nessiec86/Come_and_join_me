      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationCustom05">E-mail</label><br>
      <input type="email" name="email" id="validationCustom05" class="form-control" placeholder="Your e-mail" required>
      <div class="valid-feedback">
          Looks good!
      </div>
    </div>
  </div>
