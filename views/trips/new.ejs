
<%- include('../partials/nav') %>

<h2>Create your own Trip</h2>

<form action="/user" method="post">
  <label>Set trip category</label>
  <select>
    <% tripCategory.forEach((trip) => { %>
      <option value="<%= trip %>"><%= trip %></option>
    <% }) %>
  </select>
  
  <label for="tripName">Trip Name</label>
  <input type="text" name="tripName" id="tripName">
  
  <label for="description">Description</label>
  <input type="text" name="description" id="description">
  
  <label for="duration">Duration</label>
  <input type="text" name="duration" id="duration">
  
  <label for="petfriendly">Pet friendly</label>
  <input type="text" name="petfriendly" id="petfriendly">
  
  <label for="difficulty">Dificulty</label>
  <input type="text" name="difficulty" id="difficulty">
  
  <input type="submit" value="create">
</form>